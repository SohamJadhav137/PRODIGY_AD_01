<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393838"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutEdit"
        android:layout_above="@id/linearLayoutButtons"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:background="#67A86A"
            android:textSize="52dp"
            android:gravity="end"
            android:padding="15dp"
            android:id="@+id/textViewResult"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayoutButtons"
        android:background="#8E8B8B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_weight="3"
                app:cornerRadius="26dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#3F51B5"
                android:text="DELETE"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"
                android:id="@+id/buttonDelete"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#03A9F4"
                android:text="@string/bnm2"
                android:textSize="42dp"
                android:textColor="@color/white"
                android:layout_marginRight="42dp"
                android:id="@+id/buttonDiv"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="7"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button7"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="8"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button8"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="9"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button9"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#03A9F4"
                android:text="*"
                android:textSize="42dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/buttonMul"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="4"
                android:textSize="32dp"
                android:id="@+id/button4"
                android:textColor="@color/white"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="5"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button5"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="6"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button6"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#03A9F4"
                android:text="+"
                android:textSize="42dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/buttonAdd"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="1"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button1"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="2"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button2"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="3"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button3"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#03A9F4"
                android:text="-"
                android:textSize="42dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/buttonSub"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#F44336"
                android:text="@string/bnm1"
                android:textSize="27dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/buttonAC"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="0"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button0"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#4E4F50"
                android:text="."
                android:textSize="42dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/buttonDec"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:backgroundTint="#0C6E10"
                android:text="="
                android:textSize="42dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/buttonEqu"/>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>